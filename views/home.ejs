<%- include('./partials/header') %>
<div class="content">
  <h1>Home</h1>
  <p><%= introParagraph %></p>

  <% posts.forEach((post)=>{ %>

  <h1><%= post.title[0].toUpperCase() + post.title.substring(1); %></h1>
  <p>
    <%= post.content.substring(0,100); %>...
    <a href="/posts/<%=post.title%>"> Read more </a>
  </p>

  <% }) %>
</div>
<%- include('./partials/footer') %>
<style>
  .content {
    width: 70%;
    margin: 0 auto;
  }
</style>
