<%- include('./partials/header') %>
<body>
  <div class="content">
    <h1>Compose</h1>
    <br /><br />
    <form action="/compose" method="post">
      <div class="mb-3">
        <label for="postTitle" class="form-label">Title</label>
        <input
          name="postTitle"
          type="text"
          class="form-control"
          id="postTitle"
          placeholder="An amazing post..." />
      </div>
      <br />
      <div class="mb-3">
        <label for="postText" class="form-label">Content</label>
        <textarea
          name="postText"
          class="form-control"
          id="postText"
          rows="3"></textarea>
      </div>
      <br /><br /><button class="btn btn-primary" type="submit">Publish</button>
    </form>
  </div>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
    crossorigin="anonymous"></script>
  <%- include('./partials/footer') %>
</body>
<style>
  .content {
    width: 70%;
    margin: 0 auto;
  }
</style>
